<div class="row">
  <div class="columns large-3">
    <div class="m-bottom">
      <%= link_to :back do %>
        <%= icon "chevron-left", class: "icon--small", role: "img", "aria-hidden": true %> <%= t(".back") %>
      <% end %>
    </div>
  </div>
  <div class="columns large-6">
    <h2 class="section-heading">Modifier l'actualit√©</h2>
    <div class="card">
      <div class="card__content">
        <%= decidim_form_for(@form, html: { class: "form edit_post" }) do |f| %>
